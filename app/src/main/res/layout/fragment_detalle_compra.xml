<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- FILA: BOTÓN REGRESAR + TÍTULO -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/btnBack"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/arrow_back_24px"
                android:padding="4dp"
                app:tint="#000000" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DETALLE DE COMPRA"
                android:textColor="@color/black"
                android:textSize="22sp"
                android:textStyle="bold"
                android:layout_marginStart="12dp"/>
        </LinearLayout>

        <!-- TARJETA PRINCIPAL -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:cardElevation="6dp"
            app:cardCornerRadius="16dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <!-- TÍTULO DEL PRODUCTO -->
                <TextView
                    android:id="@+id/txtTitulo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Camiseta #1"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold"/>

                <!-- PRECIO ARRIBA A LA DERECHA -->
                <TextView
                    android:id="@+id/txtPrecio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$ 14.99"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="#1A73E8"
                    android:padding="6dp"
                    android:background="@drawable/bg_precio"
                    android:layout_alignParentEnd="true"/>

                <!-- IMAGEN -->
                <ImageView
                    android:id="@+id/imgProducto"
                    android:layout_width="match_parent"
                    android:layout_height="220dp"
                    android:layout_below="@id/txtTitulo"
                    android:layout_marginTop="15dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/camisetas"/>

                <!-- DESCRIPCIÓN -->
                <TextView
                    android:id="@+id/txtDescripcion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/imgProducto"
                    android:layout_marginTop="12dp"
                    android:textSize="14sp"
                    android:text="Camiseta de color verde hecha con tela suave y ligera..."
                    android:textColor="@color/black"/>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <!-- COLOR -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Color"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:textSize="16sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:gravity="center">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:padding="8dp"
                android:src="@drawable/ic_camiseta"
                android:background="@drawable/bg_color_selector"/>

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:padding="8dp"
                android:src="@drawable/ic_camiseta"
                android:background="@drawable/bg_color_selector"
                android:layout_marginStart="12dp"/>

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:padding="8dp"
                android:src="@drawable/ic_camiseta"
                android:background="@drawable/bg_color_selector"
                android:layout_marginStart="12dp"/>
        </LinearLayout>

        <!-- CANTIDAD -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cantidad"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:textSize="16sp"/>

        <!-- TOTAL -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/btnRestar"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="10dp"
                android:textColor="@color/black"
                android:src="@drawable/check_indeterminate_small_24px" />

            <TextView
                android:id="@+id/txtCantidad"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/bg_cantidad"
                android:gravity="center"
                android:text="1"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/btnSumar"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:textColor="@color/black"
                android:layout_marginStart="10dp"
                android:src="@drawable/add_2_24px" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="20dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="TOTAL"
                android:textStyle="bold"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/txtTotal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="$ 14.99"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:textSize="16sp"
                android:background="@drawable/bg_total"/>
        </LinearLayout>

        <!-- BOTONES INFERIORES -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:gravity="center">

            <Button
                android:id="@+id/btnComprar"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:text="COMPRAR"
                android:backgroundTint="#1A73E8"
                android:textColor="#FFFFFF"
                android:textStyle="bold"/>

            <ImageView
                android:id="@+id/btnEliminar"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/delete_24px"
                android:padding="12dp"
                android:layout_marginStart="12dp"
                android:backgroundTint="#D32F2F"/>
        </LinearLayout>

    </LinearLayout>
</ScrollView>
