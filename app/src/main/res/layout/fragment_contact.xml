<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.contact.ContactFragment">

    <TextView
        android:id="@+id/text_contacto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BRILLA CON TU PROPIO ESTILO"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

        <!-- CONTENEDOR GERALL -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:orientation="vertical"
        android:dividerPadding="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/text_contacto"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- IMAGEN TIENDA + DESXCRICPCION -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:scaleType="centerCrop"
                android:src="@drawable/tienda"
                android:contentDescription="Producto 1" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="arial"
                android:layout_marginStart="14dp"
                android:gravity="center"
                android:text="Ofrecemos ropa , calzado y accesorios modernos para todos los estilos , desde casual hasta universitario."
                android:textSize="16sp"
                android:textColor="@color/black" />

        </LinearLayout>

        <!-- Titulo de Conmtacto-->
        <TextView
            android:layout_width="wrap_content"
            android:text="CONTACTANOS"
            android:fontFamily="arial"
            android:textStyle="bold"
            android:textColor="@android:color/holo_blue_dark"
            android:layout_height="wrap_content"/>

        <!-- iCONOS DE CONTACTO + HORARIO DE ARTENCION -->
        <LinearLayout
            android:id="@+id/linearContacto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="18dp"
            android:gravity="center_vertical">

            <!-- ICONOS DE HIPERVINCULO A CONTACTO -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageButton
                    android:id="@+id/btnWash"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="0dp"
                    android:background="@drawable/rendodear_botones"
                    android:padding="10dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground"
                    android:scaleType="centerInside"
                    android:src="@drawable/whatsapp"
                    android:textColor="@color/white" />

                <ImageButton
                    android:id="@+id/btnTelf"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="5dp"
                    android:background="@drawable/rendodear_botones"
                    android:padding="10dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground"
                    android:scaleType="centerInside"
                    android:src="@drawable/telefono"
                    android:textColor="@color/white" />

                <ImageButton
                    android:id="@+id/btnMail"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="5dp"
                    android:background="@drawable/rendodear_botones"
                    android:padding="10dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground"
                    android:scaleType="centerInside"
                    android:src="@drawable/mail"
                    android:textColor="@color/white" />

            </LinearLayout>

            <!-- Horarios de Atención -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="12dp"
                    android:layout_weight="1"
                    android:text="HORARIOS"
                    android:textStyle="bold"
                    android:textColor="@android:color/holo_blue_dark"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="8dp"
                    android:layout_weight="1"
                    android:text="Lunes a Sábado"
                    android:textStyle="bold"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="8dp"
                    android:layout_weight="1"
                    android:text="10:00 am - 21:00 pm"
                    android:textColor="@android:color/darker_gray"
                    android:textStyle="bold"
                    android:textSize="14sp" />

            </LinearLayout>

        </LinearLayout>

        <!-- Titulo de Ubiacion -->
        <TextView
            android:layout_width="wrap_content"
            android:text="UBICACIÓN"
            android:fontFamily="arial"
            android:textStyle="bold"
            android:textColor="@android:color/holo_blue_dark"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/linearContacto"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ubicacion"
                android:contentDescription="Producto 1" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="arial"
                android:gravity="center"
                android:text="Av. Central 125, Local 3, Centro Comercial Plaza Norte, Riobamba – Ecuador"
                android:textSize="12sp"
                android:textColor="@color/black" />

        </LinearLayout>

        <!-- Mapa de Ubicacion de la tienda -->
        <ImageView
            android:id="@+id/imgMapa"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/mapa"
            android:scaleType="centerCrop"
            android:clickable="true"
            android:focusable="true"/>




    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>