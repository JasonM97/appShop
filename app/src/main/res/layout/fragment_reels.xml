<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.reels.ReelsFragment">

    <TextView
        android:id="@+id/textReels"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ESTILO PARA TI"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- ScrollView con una sola columna -->
    <ScrollView
        android:id="@+id/scrollContent"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="15dp"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/textReels"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="20dp">


            <!-- VIDEO 1 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="20dp"
                android:gravity="center_horizontal"
                android:background="@drawable/item_productos_bg">

                <TextView
                    android:id="@+id/text1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="MODA DE TEMPORADA 2025"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:layout_marginBottom="10dp"/>

                <FrameLayout
                    android:id="@+id/frameVideo1"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:gravity="center">

                    <VideoView
                        android:id="@+id/videoView1"
                        android:layout_width="match_parent"
                        android:layout_gravity="center"
                        android:layout_height="match_parent"/>

                    <ImageButton
                        android:id="@+id/btnPlay1"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_gravity="center"
                        android:background="@android:color/transparent"
                        android:src="@android:drawable/ic_media_play"/>
                </FrameLayout>

            </LinearLayout>
            <!-- VIDEO 1 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="20dp"
                android:gravity="center_horizontal"
                android:background="@drawable/item_productos_bg">

                <TextView
                    android:id="@+id/text2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="MODA DE TEMPORADA 2024"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:layout_marginBottom="10dp"/>

                <FrameLayout
                    android:id="@+id/frameVideo2"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:gravity="center">

                    <VideoView
                        android:id="@+id/videoView2"
                        android:layout_width="match_parent"
                        android:layout_gravity="center"
                        android:layout_height="match_parent"/>

                    <ImageButton
                        android:id="@+id/btnPlay2"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_gravity="center"
                        android:background="@android:color/transparent"
                        android:src="@android:drawable/ic_media_play"/>
                </FrameLayout>

            </LinearLayout>

            <!-- Puedes agregar más videos aquí siguiendo el mismo patrón -->

        </LinearLayout>


    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>