<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/fondo"
    android:layout_height="match_parent"
    android:padding="24dp">

    <!-- FOTO DE PERFIL -->
    <ImageView
        android:id="@+id/imgUser"
        android:layout_width="220dp"
        android:layout_height="220dp"
        android:layout_marginEnd="5dp"
        android:background="@drawable/img_circle"
        android:clipToOutline="true"
        android:scaleType="centerCrop"
        android:src="@drawable/perfil"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- CONTENEDOR DE PARA LAS ACARCTERISTICAS DEL PERFIL-->
    <LinearLayout
        android:id="@+id/perfil"
        android:layout_marginStart="80dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:background="@drawable/perfil_background"
        app:layout_constraintTop_toBottomOf="@id/imgUser"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Nombre-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="35dp"
                android:scaleType="centerCrop"
                android:src="@drawable/desarrollador1"
                android:contentDescription="Producto 1" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="arial"
                android:layout_marginStart="10dp"
                android:text="Samantha Trujillo "
                android:textSize="16sp"
                android:textColor="@color/black" />

        </LinearLayout>

        <!-- Especialidad-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="38dp"
                android:scaleType="centerCrop"
                android:src="@drawable/carrera"
                android:contentDescription="Producto 1" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="arial"
                android:layout_marginStart="10dp"
                android:text="Ingeniería en Tecnologías de la Información "
                android:textSize="14sp"
                android:textColor="@color/black" />

        </LinearLayout>
        <!-- Materia-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:scaleType="centerCrop"
                android:src="@drawable/universidad"
                android:contentDescription="Producto 1" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="arial"
                android:layout_marginStart="10dp"
                android:text="Unviersidad Nacional de Chimborazo"
                android:textSize="14sp"
                android:textColor="@color/black" />

        </LinearLayout>
        <!-- Correo-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:scaleType="centerCrop"
                android:src="@drawable/mail"
                android:contentDescription="Producto 1" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="arial"
                android:layout_marginStart="10dp"
                android:text="samantha.trujillo@unach.edu.ec "
                android:textSize="14sp"
                android:textColor="@color/black" />

        </LinearLayout>
        <!-- Telefono-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="28dp"
                android:scaleType="centerCrop"
                android:src="@drawable/telefono"
                android:contentDescription="Producto 1" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="arial"
                android:layout_marginStart="10dp"
                android:text="0958699390"
                android:textSize="14sp"
                android:textColor="@color/black" />

        </LinearLayout>


    </LinearLayout>

    <!-- CONTENEDOR PARA LOS BOTONES DE REGRESO-->
    <LinearLayout
        android:id="@+id/botones"
        android:layout_marginStart="80dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/perfil"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Boton para regresar-->
        <Button
            android:id="@+id/btnBack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Regresar"/>


        <!-- Boton para cerrarr sesison-->
        <Button
            android:id="@+id/btnLogout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:backgroundTint="#D9534F"
            android:text="Cerrar sesión"
            android:textColor="@android:color/white"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
